<launch>
<arg name="robot"/>
<arg name="eventgui" default="true"/>
<arg name="marker" default="false"/>

<!--
<include file="$(find main_control)/launch/nite_only_start.launch"/>
<include file="$(find main_control)/launch/kinect_only_start.launch"/>
rosrun people_utils ppl_viewer.exe _ppl_topics:=/kinect_only/face_detector_pplp/ppl
-->

<group ns="$(arg robot)">
  <node pkg="people_detection_vision" type="face_detector_pplp.exe"
    name="face_detector_pplp"  output="screen"
    args="" />

  <!-- conversion to ROS rviz marker -->
  <node if="$(arg marker)" pkg="people_utils" type="ppl2marker.exe"
        output="screen" name="ppl2marker_leg_pplp"
        args="_red:=1 _green:=0 _blue:=0 _input_topic:=face_detector_pplp/ppl" />

  <!-- event GUI -->
  <node pkg="ad_core" type="launcher_qt_event_sender_interface.exe"
        name="face_detector_pplp_event_gui"
        output="screen"
        args='event_keys="|FACE_DETECTOR_PPLP_START;FACE_DETECTOR_PPLP_START;0
                          |FACE_DETECTOR_PPLP_STOP;FACE_DETECTOR_PPLP_STOP;0"'/>
</group>
</launch>
