<package>
  <description brief="people_detection_vision">

     people_detection_vision is a stack for finding people around a robot.

  </description>
  <author>arnaud ramey</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/people_detection_vision</url>

  <!-- artoolkit -->
  <depend package="ar_pose"/>

  <!-- kinect interaction -->
  <depend package="openni_camera"/>
  <depend package="camera"/>

  <!-- AD - ROS -->
  <depend package="people_msgs"/>
  <depend package="people_utils"/>
  <depend package="followme_laser"/>
  <depend package="compressed_rounded_image_transport"/>

  <export>
    <nodelet plugin="${prefix}/nodelets.xml" />
    <cpp cflags="-I${prefix}" lflags="-L${prefix}/lib -Wl,-rpath,${prefix}/lib"/>
    <rosdoc config="rosdoc.yaml" />
  </export>

</package>
