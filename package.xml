<?xml version="1.0"?>
<package format="2">
  <name>people_detection_vision</name>
  <version>0.0.0</version>
  <description>
    people_detection_vision is a stack for finding people around a
    robot.
  </description>
  <maintainer email="arnaud.a.ramey@gmail.com">Arnaud Ramey</maintainer>
  <license>LGPLv3</license>
  <url type="website">http://ros.org/wiki/people_detection_vision</url>
  <buildtool_depend>catkin</buildtool_depend>

  <!-- dependencies -->
  <depend>ar_pose</depend>
  <depend>cv_bridge</depend>
  <depend>glut</depend>
  <depend>libgmp</depend>
  <depend>libgstreamer0.10-dev</depend>
  <depend>libpcl-all-dev</depend>
  <depend>libv4l-dev</depend>
  <depend>openni_camera</depend>
  <depend>libopenni-dev</depend>
  <depend>openni_launch</depend>
  <depend>openni_tracker</depend>
  <depend>pcl_conversions</depend>
  <depend>resource_retriever</depend>
  <depend>roscpp</depend>

  <!-- AD -->
  <depend>people_msgs</depend>
  <depend>people_utils</depend>
  <depend>camera</depend>
  <depend>utils</depend>
  <depend>vision_utils</depend>

  <export>
    <nodelet plugin="${prefix}/nodelets.xml" />
  </export>
</package>
